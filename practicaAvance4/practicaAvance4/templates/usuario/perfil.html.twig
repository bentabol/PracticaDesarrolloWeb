{% extends 'base.html.twig' %}

{% block content %}
  <div id="containerEditar">
  <div id="fichaCliente">
    <div class="title">Perfil de usuario</div>
    <input type="hidden" value="control">
    <div class="content">
      <div class="row">
        <input type="hidden" value="{{ usuario.username }}" name="username">
        <div class="label" style="width:25%;"><label for="username">Username</label></div>
        <div class="field" style="width:60%;">
          <input style="width:85%; margin-right:4px;" type="text" id="editUsuario" name="editUsuario" value="{{ usuario.username }}" placeholder="{{ usuario.username }}" disabled />
          <span id="username_help" class="help"></span>
        </div>
      </div>
      <div class="row">
        <div class="label" style="width:25%;"><label for="email">Email</label></div>
        <div class="field" style="width:60%;">
          <input style="width:85%; margin-right:4px;" type="text" id="email2" name="email" disabled value="{{ usuario.c_email }}" placeholder="{{ usuario.c_email }}" />
          <img style="width:8%;" id="editarEmail" width="100%" heigth="100%" src="/practicaAvance4/public/images/editar.png">
          <span id="email_help" class="help"></span>
        </div>
      </div>
      <div class="row">
        <div class="label" style="width:25%;"><label for="nombre">Nombre</label></div>
        <div class="field" style="width:60%;">
          <input style="width:85%; margin-right:4px;" type="text" id="nombre2" name="nombre" disabled value="{{usuario.c_nombre}}" placeholder="{{usuario.c_nombre}}"  />
          <img style="width:8%;" id="editarNombre" width="100%" heigth="100%" src="/practicaAvance4/public/images/editar.png">
          <span id="nombre_help" class="help"></span>
        </div>
      </div>
      <div class="row">
        <div class="label" style="width:25%;"><label for="apellidos">Apellidos</label></div>
        <div class="field" style="width:60%;">
          <input style="width:85%; margin-right:4px;" type="text" id="apellidos2" name="apellidos" disabled value="{{usuario.c_apellidos}}" placeholder="{{usuario.c_apellidos}}"  />
          <img style="width:8%;" id="editarApellidos" width="100%" heigth="100%" src="/practicaAvance4/public/images/editar.png">
          <span id="apellidos_help" class="help"></span>
        </div>
      </div>
      <div class="row">
        <div class="label" style="width:25%;"><label for="password2">Contrase√±a</label></div>
        <div class="field" style="width:60%;">
          <input style="width:85%; margin-right:4px;" class="field" type="password2" id="password2" name="password" disabled value="{{usuario.password}}" placeholder="{{usuario.password}}"  />
          <img style="width:8%;" id="editarPassword" width="100%" heigth="100%" src="/practicaAvance4/public/images/editar.png">
        </div>
      </div>
    </div>
    <div class="row">
      <a id="btEditar" href="{{ path('showEditarUsuario', {'username' : usuario.username})}}">Editar</a>
    </div>
  </div>
</div>
{% endblock %}